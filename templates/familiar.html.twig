{% extends "catalogo.html.twig" %}
{% block pisos %}
    <div class="row mt-5">
    {% for habitacion in habitaciones %}
        <div class="col-6 mb-4">
            <div class="card">
                <div class="card-header text-center">
                    Habitacion individual {{ habitacion.num }}  {% if habitacion.terraza == 1 %} con terraza {% endif %}
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{ habitacion.tipo.nombre }}</h5>
                    <p class="card-text">{{ habitacion.tipo.descripcion }}</p>
                    <a href="#">Detalles de la habitación ></a>
                    <a href="#" class="btn btn-primary ml-5">Más Información</a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}